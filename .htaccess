RewriteEngine On

# Remove .html extension
RewriteCond %{REQUEST_FILENAME}\.html -f
RewriteRule ^(.+)$ $1.html [L]

# Redirect /home to home.html
RewriteRule ^home/?$ home.html [L]

# Redirect clean URLs (ex: /services â†’ /services/)
RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^([^/]+)/?$ $1.html [L]
